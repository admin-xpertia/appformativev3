{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // --- INICIO DE LA CORRECCIÓN CLAVE ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    // --- FIN DE LA CORRECCIÓN CLAVE ---
  },
  "include": [
    "src/**/*.ts", // Incluye todo el código de tu backend
    "../packages/types/src/**/*.ts" // Le dice a TS que es aceptable mirar aquí también
  ],
  "exclude": ["node_modules"]
}